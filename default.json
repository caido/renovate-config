{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "description": "Default Renovate config to be used for all Caido projects",
    "timezone": "America/New_York",
    "extends": [
        "config:recommended",
        "github>caido/renovate-config:security"
    ],
    "stabilityDays": 14,
    "schedule": ["before 8am on Monday"],
    "labels": ["dependency"],
    "reviewersFromCodeOwners": true,
    "prConcurrentLimit": 5,
    "prHourlyLimit": 0
}
